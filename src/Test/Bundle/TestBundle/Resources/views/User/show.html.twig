{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Détails de l'utilisateur {{ entity.prenom ~ entity.nom }}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entity.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ entity.birth|date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ entity.sexe }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ entity.ville }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ entity.level }}</td>
            </tr>
            <tr>
                <th>Points totaux</th>
                <td>{{ entity.totalPoint }}</td>
            </tr>
            <tr>
                <th>Point temporaires</th>
                <td>{{ entity.tempPoint }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_user') }}">
            Retourner à la liste
        </a>
    </li>
    <li>
        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">
            Modifier
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
